<resources>
    <!-- TODO: Estudiar el elemento toolbar como reemplazo de la action bar.-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LeBikeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/fondo_lebike_activity</item>
    </style>

    <style name="LePatrimonios" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryPatrimonios</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPatrimonios</item>
        <item name="colorAccent">@color/colorAccentPatrimonios</item>
        <item name="titleTextColor">@color/colorPrimaryDarkPatrimonios</item>
    </style>

    <!-- MisAlertasActivity base theme. -->
    <!-- changing it to no actionbar -->
    <style name="MisAlertasActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StartTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- For custom DialogFragment's -->
    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/shape_edit_dialog_fragment_background</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
