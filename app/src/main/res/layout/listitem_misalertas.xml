<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:orientation="horizontal"
    android:gravity="">

    <ImageView
        android:id="@+id/tipoalerta_itemmisalertas"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/titulo_itemmisalertas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="'' TÃ­tulo todo largo que sobrepasa el largo de la wea! ''"
            android:textSize="16sp"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/fecha_itemmisalertas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#757575"
            android:text="Hace 3 minutos"
            android:layout_marginTop="5dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_weight="0"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_camara_gris"
        android:background="#00000000"
        android:adjustViewBounds="false"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:id="@+id/camara_item_misalertas"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_editar"
        android:background="#00000000"
        android:adjustViewBounds="false"
        android:id="@+id/edit_misalertas_item"
        android:layout_marginTop="8dp"/>

</LinearLayout>
