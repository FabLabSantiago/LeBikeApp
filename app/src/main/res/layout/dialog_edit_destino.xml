<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Edicion de destino -->
    <LinearLayout
        android:id="@+id/edit_destination_subwindow"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="#faf8f6"
        android:elevation="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">
            <Button
                android:id="@+id/edit_destino_dialog_close_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_cruz"
                android:layout_gravity="right"
                android:onClick="closeDestinationEditDialog"/>
            <View
                android:layout_width="0dp"
                android:layout_height="30dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:hint="DirecciÃ³n"
                android:textColorHint="#a6a4a2"/>
            <View
                android:layout_width="0dp"
                android:layout_height="30dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre Destino"
                android:textSize="14dp"
                android:textColorHint="#a6a4a2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="GUARDAR"
                android:onClick="closeNewDestination"/>
            <View
                android:layout_width="10dp"
                android:layout_height="0dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="DESCARTAR"
                android:onClick="closeNewDestination"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>