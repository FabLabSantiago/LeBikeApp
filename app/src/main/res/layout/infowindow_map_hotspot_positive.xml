<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/comentario_imageenn"
        android:layout_width="190dp"
        android:layout_height="75dp"
        android:src="@drawable/comentario_positivo"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="180dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;Arboles, mariposas y criaturas hermosas del bosque&quot;"
        android:textSize="11sp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        android:layout_alignStart="@+id/comentario_imageenn"
        android:textColor="#fff"
        android:id="@+id/infoWindowInfoTextView"
        android:layout_alignParentEnd="false"/>
    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_local_florist_white_24dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="8dp"
        android:layout_alignEnd="@+id/comentario_imageenn"
        android:id="@+id/imageView2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hace 1 semana por Alicia"
        android:textSize="8sp"
        android:layout_marginLeft="8dp"
        android:textColor="#fff"
        android:id="@+id/textView2"
        android:layout_below="@+id/infoWindowInfoTextView"
        android:layout_toStartOf="@+id/imageView2"/>
</RelativeLayout>
