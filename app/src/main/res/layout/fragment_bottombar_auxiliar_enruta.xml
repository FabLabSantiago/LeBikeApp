<?xml version="1.0" encoding="utf-8"?>
<!-- Bottom Information -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/enRutaBottomInformation"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#CCfaf8f6"
    android:visibility="gone">
    <ImageButton
        android:id="@+id/trackRouteButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/rutas"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:enabled="false"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageButton
        android:id="@+id/previousRouteButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_keyboard_arrow_down_grey_48dp"
        android:scaleType="fitCenter"
        android:background="#00000000"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1.2"/>
    <TextView
        android:id="@+id/rutaSeleccionada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruta"
        android:textSize="18sp"
        android:textIsSelectable="false"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1.2"/>
    <ImageButton
        android:id="@+id/nextRouteButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_keyboard_arrow_up_grey_48dp"
        android:scaleType="fitCenter"
        android:background="#00000000"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pos_percentage">
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:progress="100"
            android:progressDrawable="@drawable/shape_circular_percentage_background"/>
        <ProgressBar
            android:id="@+id/posProgressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:progress="65"
            android:progressDrawable="@drawable/shape_circular_percentage_good"/>
        <TextView
            android:id="@+id/posProgressBarPercent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="65%"
            android:textColor="#1a917f"/>
    </FrameLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:id="@+id/neg_percentage2">
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:progress="100"
            android:progressDrawable="@drawable/shape_circular_percentage_background"/>
        <ProgressBar
            android:id="@+id/negProgressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:progress="35"
            android:progressDrawable="@drawable/shape_circular_percentage_bad"/>
        <TextView
            android:id="@+id/negProgressBarPercent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="35%"
            android:textColor="#1a917f"/>
    </FrameLayout>
</LinearLayout>